<?
function plot_settings($type,$params=""){
    $settings = "";
    switch($type){
    case "temperature":
        $settings["query"] = "SELECT unix_timestamp(time), temperature FROM temperature_omicron where time between \"" . $params["from"] . "\" and \"" . $params["to"] ."\" order by time desc";
        $settings["ylabel"] = "Temperature / C";
        $settings["titel"] = "Temperature in the Omicron";
        $settings["default_yscale"] = "lin";
        $settings["default_xscale"] = "dat";
        break;
    case "pressure_ana":
        $settings["query"] = "SELECT unix_timestamp(time), pressure FROM pressure_omicron_ana where time between \"" . $params["from"] . "\" and \"" . $params["to"] ."\" order by time desc";
        $settings["ylabel"] = "Pressure / mbar";
        $settings["titel"] = "Pressure in the Omicron Analytical chamber";
        $settings["default_yscale"] = "log";
        $settings["default_xscale"] = "dat";
        break;
    case "morning_pressure_ana":
        $settings["query"] = "select unix_timestamp(date(time)), avg(pressure) from pressure_omicron_ana where hour(time) = 6 and minute(time) between 00 and 20 and time between \"" . $params["from"] . "\" and \"" . $params["to"] ."\" group by date(time) order by time desc limit 30";
        $settings["ylabel"] = "Pressure / mbar";
        $settings["titel"] = "Pressure at 6 am in the Omicron Analytical chamber";
        $settings["default_yscale"] = "log";
        $settings["default_xscale"] = "dat";
        $settings["default_style"] = "barplot";
        break;
    case "pressure_prep":
        $settings["query"] = "SELECT unix_timestamp(time), pressure FROM pressure_omicron_prep where time between \"" . $params["from"] . "\" and \"" . $params["to"] ."\" order by time desc";
        $settings["ylabel"] = "Pressure / mbar";
        $settings["titel"] = "Pressure in the Omicron Prep chamber";
        $settings["default_yscale"] = "log";
        $settings["default_xscale"] = "dat";
        break;
    case "morning_pressure_prep":
        $settings["query"] = "select unix_timestamp(date(time)), avg(pressure) from pressure_omicron_prep where hour(time) = 6 and minute(time) between 00 and 20 and time between \"" . $params["from"] . "\" and \"" . $params["to"] ."\" group by date(time) order by time desc limit 30";
        $settings["ylabel"] = "Pressure / mbar";
        $settings["titel"] = "Pressure at 6 am in the Omicron Prep chamber";
        $settings["default_yscale"] = "log";
        $settings["default_xscale"] = "dat";
        $settings["default_style"] = "barplot";
        break;

    }
    return($settings);
}
?>
