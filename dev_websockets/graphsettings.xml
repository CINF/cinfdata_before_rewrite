<?xml version='1.0' standalone='yes'?>
<graphs>

  <graph type="livegraph5">
    <page_width>1280</page_width>
    <page_title>Live Plots Test</page_title> <!-- option page title -->
    <containers>

      <!-- Container 0, contains the first plot -->
      <container0>
	<type>figure</type>
	<update_interval>1.2</update_interval>
	<x_window>60</x_window>
	<width>600</width>
	<height>400</height>
	<!-- General plot options -->
	<bgcolor>#FFFFFF</bgcolor> <!-- optional color, default #FFFFFF -->
	<!-- optional float that describes how large a fraction of x_windows
	     will be cleared when the graph jumps ahead, default 0.2 -->
	<jump_ahead>0.8</jump_ahead>
	<!-- title and labels -->
	<title>Volvo&#60;sup&#62;2&#60;&#47;sup&#62;</title> <!-- optional (escaped) html -->
	<xlabel>Time</xlabel> <!-- optional (escaped) html -->
	<ylabel>Pressure [mbar]</ylabel> <!-- optional (escaped) html -->
	<!-- Plot drawing fine tuning -->
	<draw_points>false</draw_points> <!-- optional bool, default true -->
	<point_size>2</point_size> <!-- optional int, default 2 -->
	<linewidth>1.5</linewidth> <!-- optional float, default 1.5 -->
	<logscale>true</logscale> <!-- optonal bool, default false -->
	<figure>
	  <plot0>
	    <socket>1</socket>
	    <color>#0000FF</color>
	    <id>pressure</id>
	    <label>Pressure / [mbar]</label>
	  </plot0>
	</figure>
      </container0>

      <!-- Container 1, contains the second plot -->
      <container1>
	<type>figure</type>
	<title>Theta Probe</title>
	<update_interval>1.0</update_interval>
	<!-- <bgcolor>#E7E7E7</bgcolor>-->
	<width>600</width>
	<height>400</height>
	<jump_ahead>0.8</jump_ahead>
	<x_window>10</x_window>
	<logscale>true</logscale>
	<line_width>7</line_width>
	<figure>
	  <plot0>
	    <socket>0</socket>
	    <id>thetaprobe_pressure_loadlock</id>
	    <label>Load lock pressure / [mbar]</label>
	    <color>#FF0000</color>
	  </plot0>
	  <plot1>
	    <socket>0</socket>
	    <id>thetaprobe_pressure_uvgun</id>
	    <label>UV gun pressure / [mbar]</label>
	    <color>#0000FF</color>
	  </plot1>	  
	</figure>
      </container1>
      <container2>
	<type>data</type>
	<!--<bgcolor>#F0F0F0</bgcolor>-->
	<width>600</width>
	<height>200</height>
	<fontsize>24</fontsize>
	<data>
	  <item0>
	    <color>#0000FF</color>
	    <socket>1</socket>
	    <id>pressure</id>
	    <label>Pressure / [mbar]</label>
	  </item0>
	  <item1>
	    <socket>1</socket>
	    <id>temperature</id>
	    <label>Temperature / [C]</label>
	  </item1>
	</data>
      </container2>
      <container3>
	<type>data</type>
	<!--<bgcolor>#FFFFFF</bgcolor>-->
	<width>600</width>
	<height>200</height>
	<fontsize>24</fontsize>
	<show_diff>true</show_diff>
	<data>
	  <item0>
	    <socket>0</socket>
	    <id>thetaprobe_pressure_loadlock</id>
	    <label>Load lock / [mbar]</label>
	    <color>#FF0000</color>
	  </item0>
	  <item1>
	    <socket>0</socket>
	    <id>thetaprobe_pressure_uvgun</id>
	    <label>UV gun / [mbar]</label>
	    <color>#0000FF</color>
	  </item1>
	</data>
      </container3>
    </containers>
  </graph>

  <global_settings>
    <measurements_table>measurements_stm312</measurements_table>
    <xyvalues_table>xy_values_stm312</xyvalues_table>
    <sql_username>stm312</sql_username>
    <label_column>mass_label</label_column>
    <image_format>png</image_format>
    <folder_name>dev_websockets</folder_name>
    <mandatory_export_fields>
      <field0>
	<field>id</field>
	<name>Id</name>
      </field0>
      <field1>
	<field>type</field>
	<name>Type</name>
      </field1>
      <field2>
	<field>time</field>
	<name>Recorded at</name>
      </field2>
      <field3>
	<field>Comment</field>
	<name>Comment</name>
      </field3>
    </mandatory_export_fields>

    <!-- WEBSOCKETS STUFF-->

    <sockets>
      <socket0>rasppi25:8000</socket0>
      <socket1>rasppi04:8000</socket1>
    </sockets>

  </global_settings>
</graphs>

