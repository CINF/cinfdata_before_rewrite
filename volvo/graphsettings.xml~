<?xml version='1.0' standalone='yes'?>
<graphs>

  <!-- PRESSURE -->
  <graph type='pressure'>
    <query>SELECT unix_timestamp(time), pressure FROM pressure_volvo where time between "{from}" and "{to}" order by time</query>
    <ylabel>Pressure / mbar</ylabel>
    <title>Pressure in Volvo</title>
    <default_yscale>log</default_yscale>
    <default_xscale>dat</default_xscale>
  </graph>
  
  <!-- MORNING_PRESSURE -->
  <graph type='morning_pressure'>
    <query>select unix_timestamp(date(time)), avg(pressure) from pressure_volvo where hour(time) = 1 and minute(time) between 00 and 20 and time between "{from}" and "{to}" group by date(time) order by time desc limit 30</query>
    <ylabel>Pressure / mbar</ylabel>
    <title>Pressure at 1 am in the Volvo</title>
    <default_yscale>log</default_yscale>
    <default_xscale>dat</default_xscale>
    <default_style>barplot</default_style>
  </graph>

  <!-- TEMPERATURE -->
  <graph type='temperature'>
    <query>SELECT unix_timestamp(time), temperature FROM temperature_volvo where temperature between -1 and 1300 and time between "{from}" and "{to}" order by time</query>
    <ylabel>Temperature / C</ylabel>
    <title>Temperature in the Volvo</title>
    <default_yscale>lin</default_yscale>
    <default_xscale>dat</default_xscale>
  </graph>
  
  <!-- IV -->
  <graph type='iv'>
    <query>SELECT x,y  FROM xy_values_volvo where measurement = {id} order by id</query>
    <type>1</type>
    <xlabel>Voltage / V</xlabel>
    <ylabel>Current / A</ylabel>
    <title>IV-curves</title>
    <default_xscale>lin</default_xscale>
    <default_yscale>log</default_yscale>
  </graph>
  
  <!-- XPS -->
  <graph type='xps'>
    <query>SELECT x,y  FROM xy_values_volvo where measurement = {id} order by id</query>
    <type>2</type>
    <xlabel>Binding energy / eV</xlabel>
    <ylabel>Counts / s</ylabel>
    <title>XPS data</title>
    <default_xscale>lin</default_xscale>
    <default_yscale>lin</default_yscale>
    <param0_field>pass_energy</param0_field>
    <param0_name>Pass Energy / eV</param0_name>
  </graph>
  
  <!-- ISS -->
  <graph type='iss'>
    <query>SELECT x,y  FROM xy_values_volvo where measurement = {id} order by id</query>
    <type>3</type>
    <xlabel>Energy / eV</xlabel>
    <ylabel>Counts / s</ylabel>
    <title>ISS data</title>
    <default_xscale>lin</default_xscale>
    <default_yscale>lin</default_yscale>
  </graph>

  <!-- MASSSPECTRUM -->
  <graph type='massspectrum'>
    <query>SELECT x,y  FROM xy_values_volvo where measurement = {id} order by id</query>
    <offset_query>SELECT min(y) FROM xy_values_volvo where measurement = {id}</offset_query>
    <type>4</type>
    <xlabel>Mass / amu</xlabel>
    <ylabel>SEM current / A</ylabel>
    <title>Mass Spectrum</title>
    <default_xscale>lin</default_xscale>
    <default_yscale>log</default_yscale>
    <param0_field>sem_voltage</param0_field>
    <param0_name>SEM Voltage / V</param0_name>
    <param1_field>preamp_range</param1_field>
    <param1_name>Range</param1_name>
  </graph>
  
  <!-- MASSTIME -->
  <graph type='masstime'>
    <query>SELECT x/1000,y  FROM xy_values_volvo where measurement = {id} order by id</query>
    <t_query>SELECT x/1000,y FROM xy_values_volvo where measurement = {id} order by id</t_query>
    <type>5</type>
    <xlabel>Time / s</xlabel>
    <t_xlabel>Temp / </t_xlabel>
    <temperature_unit>C</temperature_unit>
    <ylabel>SEM current / A</ylabel>
    <title>Mass vs. time</title>
    <t_title>Mass vs. temperature</t_title>
    <default_xscale>lin</default_xscale>
    <default_yscale>lin</default_yscale>
    <param0_field>sem_voltage</param0_field>
    <param0_name>SEM Voltage / V</param0_name>
    <param1_field>preamp_range</param1_field>
    <param1_name>Range</param1_name>
  </graph>
    
  <global_settings>
    <measurements_table>measurements_volvo</measurements_table>
    <xyvalues_table>xy_values_volvo</xyvalues_table>
    <chamber_name>Volvo</chamber_name>
  </global_settings>
</graphs>
