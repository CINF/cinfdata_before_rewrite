<?xml version='1.0' standalone='yes'?>
<graphs>
 
  <!-- MASSSPECTRUM -->
  <graph type='massspectrum'>
    <query>SELECT x,y  FROM xy_values_photo_microreactor where measurement = {id} order by id</query>
    <offset_query>SELECT min(y) FROM xy_values_photo_microreactor where measurement = {id}</offset_query>
    <type>4</type>
    <xlabel>Mass / amu</xlabel>
    <ylabel>SEM current / A</ylabel>
    <title>Mass Spectrum</title>
    <default_xscale>lin</default_xscale>
    <default_yscale>lin</default_yscale>
    <param0_field>sem_voltage</param0_field>
    <param0_name>SEM Voltage / V</param0_name>
    <param1_field>preamp_range</param1_field>
    <param1_name>Range</param1_name>
  </graph>
  
  <!-- MASSTIME -->
  <graph type='masstime'>
    <!-- <query>SELECT x/1000,y  FROM xy_values_microreactor where measurement = {id} order by id</query> -->
    <query>SELECT x/1000,y  FROM xy_values_photo_microreactor where measurement = {id}</query>
    <t_query>SELECT x/1000,y FROM xy_values_photo_microreactor where measurement = {t_id} order by id</t_query>
    <type>5</type>
    <image_format>png</image_format>
    <xlabel>Time / s</xlabel>
    <t_xlabel>RTD Tempemperature / </t_xlabel>
    <temperature_unit>C</temperature_unit>
    <ylabel>SEM current / A</ylabel>
    <!-- Title for mass vs. time -->
    <title>Mass vs. time</title>
    <!-- Title for mass vs. temperature -->
    <t_title>Mass vs. temperature</t_title>
    <legend_field_name>mass_label</legend_field_name>
    <right_y_axis_field_name>mass_label</right_y_axis_field_name>
    <right_y_axis_field_value>TC temperature, RTD temperature,Flow 1,Flow 2,Flow 3, Flow 4</right_y_axis_field_value>
    <right_yscale>lin</right_yscale>
    <right_ylabel>Temperature / C</right_ylabel>
    <default_xscale>lin</default_xscale>
    <default_yscale>lin</default_yscale>
    <param0_field>sem_voltage</param0_field>
    <param0_name>SEM Voltage / V</param0_name>
    <param1_field>preamp_range</param1_field>
    <param1_name>Range</param1_name>
  </graph>
    
  <global_settings>
    <measurements_table>measurements_photo_microreactor</measurements_table>
    <xyvalues_table>xy_values_photo_microreactor</xyvalues_table>
    <chamber_name>Photo Microreactor</chamber_name>
    <sql_username>photo_micro</sql_username>
  </global_settings>
</graphs>
