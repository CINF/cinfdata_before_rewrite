<?xml version='1.0' standalone='yes'?>
<graphs>

  <!-- MULTI DATEPLOT -->
  <graph type='multidateplot_pressures'>
    <app>
      <title>Pressures</title>
      
    </app>
    <default_xscale>dat</default_xscale>
    <xlabel>Date</xlabel>
    <right_legend_suffix> (r)</right_legend_suffix>
    <!-- Fall back settings -->
    <title>Multiple dateplots</title>
    <ylabel>Mixed</ylabel>
    <dygraph_settings>
      <roll_period>5</roll_period>
      <labels_side>true</labels_side>
    </dygraph_settings>

    <dateplot1>
      <title>Pressure load lock</title>
      <legend>p$_{load\,lock}$</legend>
      <!-- dateplot id 10 -->
      <query>SELECT unix_timestamp(time), value FROM dateplots_thetaprobe WHERE type=10 AND time BETWEEN "{from}" AND "{to}" ORDER BY TIME</query>
      <ylabel>Pressure / mbar</ylabel>
      <color>1</color>
    </dateplot1>

    <dateplot2>
      <title>Pressure UV gun</title>
      <legend>p$_{UV\,gun}$</legend>
      <!-- dateplot id 11 -->
      <query>SELECT unix_timestamp(time), value FROM dateplots_thetaprobe WHERE type=11 AND time BETWEEN "{from}" AND "{to}" ORDER BY TIME</query>
      <ylabel>Pressure / mbar</ylabel>
      <color>2</color>
    </dateplot2>
  </graph>

  <graph type="live_pressures">
    <page_width>1280</page_width>
    <page_title>Thetaprobe Live Plots</page_title> <!-- option page title -->
    <containers>

      <!-- Container 1, contains the second plot -->
      <container0>
	<type>date_figure</type>
	<title>Sines</title>
	<width>700</width>
	<height>500</height>
	<jump_ahead>0.3</jump_ahead>
	<x_window>40</x_window>
	<logscale>false</logscale>
	<line_width>3</line_width>
	<figure>
	  <plot0>
	    <data_channel>rasppi71:sine1</data_channel>
	    <label>Sine1</label>
	    <color>#0000FF</color>
	  </plot0>
	  <plot1>
	    <data_channel>rasppi71:sine2</data_channel>
	    <label>Sine2</label>
	    <color>#FF0000</color>
	  </plot1>
	</figure>
      </container0>

      <container1>
	<type>table</type>
	<!--<bgcolor>#FF00FF</bgcolor>-->
	<width>550</width>
	<height>300</height>
	<fontsize>24</fontsize>
	<!--<show_diff>true</show_diff>-->
	<data>
	  <item0>
	    <data_channel>rasppi71:sine1</data_channel>
	    <label>Sine1</label>
	    <color>#0000FF</color>
	    <format>.2e</format>
	    <unit>mbar</unit>
	  </item0>
	  <item1>
	    <data_channel>rasppi71:sine2</data_channel>
	    <label>Sine2</label>
	    <color>#FF0000</color>
	    <format>.2e</format>
	    <unit>mbar</unit>
	  </item1>
	  <item2>
	    <data_channel>rasppi71:cosine1</data_channel>
            <xformat>.2f</xformat>
	    <label>Cosine1</label>
	    <color>#088A08</color>
	    <format>.2f</format>
	    <unit></unit>
	  </item2>
	  <item3>
            <xformat>.2f</xformat>
	    <data_channel>rasppi71:cosine2</data_channel>
	    <label>Cosine2</label>
	    <color>#FF00FF</color>
	    <format>.2f</format>
	    <unit></unit>
	  </item3>
	  <item4>
	    <data_channel>rasppi71:status</data_channel>
	    <label>UV gun</label>
	    <color>#FFFFFF</color>
	    <format>text</format>
	    <unit></unit>
	  </item4>
	</data>
      </container1>

      <!-- Container 2, contains the second plot -->
      <container2>
	<type>x_figure</type>
	<title>Cosines</title>
	<width>420</width>
	<height>300</height>
	<line_width>3</line_width>
	<figure>
	  <plot0>
	    <data_channel>rasppi71:cosine1</data_channel>
	    <label>Cosine 1</label>
	    <color>#088A08</color>
	  </plot0>
	  <plot1>
	    <data_channel>rasppi71:cosine2</data_channel>
	    <label>Cosine 2</label>
	    <color>#FF00FF</color>
	  </plot1>
	</figure>
      </container2>

    </containers>
  </graph>


  <!-- GLOBAL SETTINGS -->
  <global_settings>
    <app_title>Theta probe</app_title>
    <measurements_table>measurements_thetaprobe</measurements_table>
    <xyvalues_table>xy_values_thetaprobe</xyvalues_table>
    <sql_username>thetaprobe</sql_username>
    <image_format>png</image_format>
    <folder_name>thetaprobe</folder_name>
    <mandatory_export_fields>
      <field0>
	<field>id</field>
	<name>Id</name>
      </field0>
      <field1>
	<field>type</field>
	<name>Type</name>
      </field1>
      <field2>
	<field>time</field>
	<name>Recorded at</name>
      </field2>
      <field3>
	<field>comment</field>
	<name>Comment</name>
      </field3>
    </mandatory_export_fields>
    <matplotlib_settings>
      <width>900</width>
      <height>600</height>
      <title_size>24</title_size>
      <xtick_labelsize>12</xtick_labelsize>
      <ytick_labelsize>12</ytick_labelsize>
      <legend_fontsize>10</legend_fontsize>
      <label_fontsize>16</label_fontsize>
    </matplotlib_settings>
    <sockets>
      <socket0>rasppi25:8000</socket0>
      <socket1>rasppi71:8000</socket1>
    </sockets>
  </global_settings>
</graphs>
